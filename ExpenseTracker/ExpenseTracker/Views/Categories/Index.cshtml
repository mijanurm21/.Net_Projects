@model IEnumerable<Expense_Tracker.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-white mb-4">Categories</h2>

<div class="mb-3">
    <a asp-action="AddOrEdit" class="btn btn-primary">Create New</a>
</div>

@* <div class="mb-3 text-end">
    <a asp-controller="Transactions" asp-action="Index" class="btn btn-primary">View Transaction</a>
</div> *@


<table class="table  table-hover table-bordered rounded">
    <thead>
        <tr>
            <th>Category</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span>@Html.DisplayFor(modelItem => item.Icon)</span>
                    <span class="ms-2">@Html.DisplayFor(modelItem => item.Title)</span>
                </td>
                <td>
                    @if (item.Type == "Income")
                    {
                        <span class="badge bg-success">Income</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Expense</span>
                    }
                </td>
                <td class="gap-4">
                    <a asp-action="AddOrEdit" asp-route-id="@item.CategoryId" class="text-warning me-2" title="Edit">
                        ✏️
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="text-danger" title="Delete"
                       onclick="return confirm('Are you sure you want to delete this category?');">
                        🗑️
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Optional: Bootstrap Pagination UI -->
<nav>
    <ul class="pagination pagination-dark justify-content-center">
        <li class="page-item disabled"><span class="page-link">&laquo;</span></li>
        <li class="page-item active"><span class="page-link">1</span></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
    </ul>
</nav>
